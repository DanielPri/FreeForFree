extends ../catalog.pug

block content
  .container
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/formMovie") Add Movie
    br
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/sortMoviesByTitle") Sort By Title
      a(class="btn btn-primary" href="/users/admin/sortMoviesByDirector") Sort By Director
      a(class="btn btn-primary" href="/users/admin/sortMoviesByProducers") Sort By Producers
      a(class="btn btn-primary" href="/users/admin/sortMoviesByActors") Sort By Actors
      a(class="btn btn-primary" href="/users/admin/sortMoviesByLanguage") Sort By Language
      a(class="btn btn-primary" href="/users/admin/sortMoviesBySubtitles") Sort By Subtitles
      a(class="btn btn-primary" href="/users/admin/sortMoviesByDubbed") Sort By Dubbed
      a(class="btn btn-primary" href="/users/admin/sortMoviesByRuntime") Sort By Run Time
    br
    header Movies
    table(class='table')
     thead
      tr
       td View
       td Title
       td Director
       td Producers
       td Actors
       td Language
       td Subtitles
       td Dubbed
       td Run Time
     tbody
      each movie in movies
       tr
        td
         .media-left
          a(href=`/users/admin/movies/${movie.id}`)
           img(Id="image" src=movie.imageUrl)
        td= movie.title
        td= movie.director
        td= movie.producers
        td= movie.actors
        td= movie.language
        td= movie.subtitles
        td= movie.dubbed
        td= movie.runTime
  if !movies.length
    p No movies found.
  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) Next
