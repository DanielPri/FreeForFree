extends ../catalog.pug

block content
  h3 Book
   small

  .btn-group
   a(href=`/users/admin/${book.id}/formBook`, class='btn btn-primary btn-sm')
     i.glyphicon.glyphicon-edit
     span  Edit book
   a(href=`/users/admin/${book.id}/delete`, class='btn btn-danger btn-sm')
     i.glyphicon.glyphicon-trash
     span  Delete book

  .media
      .media-left
        img(Id="bookImage" src=book.imageUrl)
      .media-body
        h4= book.title
          | &nbsp;
          small= book.publishedDate
        h5 By #{book.author||'unknown'}
        p= book.description
