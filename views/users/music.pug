extends ../catalog.pug

block content
  .container
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/formMusic") Add Music
    br
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/sortMusicByTitle") Sort By Title
      a(class="btn btn-primary" href="/users/admin/sortMusicByType") Sort By Type
      a(class="btn btn-primary" href="/users/admin/sortMusicByArtist") Sort By Artist
      a(class="btn btn-primary" href="/users/admin/sortMusicByLabel") Sort By Label
      a(class="btn btn-primary" href="/users/admin/sortMusicByReleaseDate") Sort By Release Date
      a(class="btn btn-primary" href="/users/admin/sortMusicByASIN") Sort By ASIN
    header Music
    br
    table(class='table')
     thead
      tr
       td View
       td Title
       td Type
       td Artist
       td Label
       td Release Date
       td ASIN
     tbody
      each music in musics
       tr
        td
         .media-left
          a(href=`/users/admin/music/${music.id}`)
           img(Id="image" src=music.imageUrl)
        td= music.title
        td= music.type
        td= music.artist
        td= music.label
        td= music.releaseDate
        td= music.ASIN
  if !musics.length
    p No musics found.
  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) Next
