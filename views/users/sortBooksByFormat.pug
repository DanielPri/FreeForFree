extends ../catalog.pug

block content
  .container
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/formBook") Add Book
    br
    div(align="center")
      a(class="btn btn-primary" href="/users/admin/sortBooksByTitle") Sort By Title
      a(class="btn btn-primary" href="/users/admin/sortBooksByFormat") Sort By Format
    br
    header Books
    table(class='table')
     thead
      tr
       td View
       td Title
       td Format
       td Pages
       td Language
       td Author
       td Published
       td ISBN-10
       td ISBN-13
     tbody
      each book in books
       tr
        td
         .media-left
          a(href=`/users/admin/books/${book.id}`)
           img(Id="image" src=book.imageUrl)
        td= book.title
        td= book.format
        td= book.pages
        td= book.language
        td= book.author
        td= book.publishedDate
        td= book.ISBN10
        td= book.ISBN13 
  if !books.length
    p No books found.
  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) Next
