extends ../../catalog-client.pug

block content
  div(class="container")
    div(class="row justify-content-md-center")
      h3 Movie
       small
      .btn-group
       a(href=`/users/admin/books/${movie.id}/edit`, class='btn btn-success btn-sm' disabled=check)
         i.glyphicon.glyphicon-edit
         span  Add to cart
            
      .media
          .media-left
            img(Id="image" src=movie.imageUrl)
          .media-body
            h4= movie.title
              | &nbsp;
              small= movie.publishedDate
            h5 Direced by #{movie.director||'unknown'}
            p= movie.description
