extends ../../catalog-client.pug

block content
  div(class="container")
    div(class="row justify-content-md-center")
      h3 Magazine
       small
      .btn-group
       a(href=`/users/admin/books/${magazine.id}/edit`, class='btn btn-success btn-sm' disabled=check)
         i.glyphicon.glyphicon-edit
         span  Add to cart
     
      .media
          .media-left
            img(Id="image" src=magazine.imageUrl)
          .media-body
            h4= magazine.title
              | &nbsp;
              small= magazine.publishedDate
            h5 By #{magazine.publisher||'unknown'}
            p= magazine.description
